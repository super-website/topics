generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}






model Topics {
  id         String   @id @default(uuid())
  title      String
  short_desc String   @db.Text
  long_desc  String   @db.Text        
  createdAt  DateTime @default(now())
  subjectId  String
  subject    Subject  @relation(fields: [subjectId], references: [id])
}

model Subject {
  id          String   @id @default(uuid()) 
  name        String   
  short_name  String   @default("Unknown") 
  short_desc  String   
  topics      Topics[]  
}


model Admin {
  id       String  @id @default(cuid()) 
  name     String  
  email    String  @unique
  password String  
  role     Role    @default(MANAGER)  

  @@map("admins") 
}

enum Role {
  ADMIN
  MANAGER
  CONTENT_MANAGER
}




model Gallery {
  id        String   @id @default(uuid())
  title     String
  images    Json   
  createdAt DateTime @default(now())
}